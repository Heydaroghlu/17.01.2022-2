@model Tag
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <form method="post" asp-action="create" asp-controller="tag">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Author Name</label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create New Tag</button>
            </form>
        </div>
    </div>
</div>

