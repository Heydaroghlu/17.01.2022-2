@model Genre
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10">
            <form method="post" asp-action="create" asp-controller="genre">
                <div class="mb-3">
                    <label asp-for="Name"  class="form-label">Genre Name</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>

                <button type="submit" class="btn btn-primary">Create New Genre</button>
            </form>
        </div>
    </div>
</div>

