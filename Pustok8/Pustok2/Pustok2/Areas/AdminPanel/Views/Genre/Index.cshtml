@model List<Genre>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container ">
    <dv class="row">
        <div class="col-lg-12">
            <h1 style="float:left">Genre</h1>
            <a style="display:flex;margin-left:80%;width:80px" asp-action="create" asp-controller="genre" class="btn btn-primary">Create</a>
        </div>
    </dv>
    <row mx-auto>
        <div class="col-lg-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Genre-Name</th>
                        <th scope="col">Genre-Books</th>
                        <th scope="col">Change</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Genre item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.Books.Count</td>
                            <td>
                                <a class="btn btn-danger delete-btn2" data-id="@item.Id" data-name="genre" asp-action="delete" asp-controller="genre" asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-success" asp-action="update" asp-controller="genre" asp-route-id="@item.Id">Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </row>
</div>

