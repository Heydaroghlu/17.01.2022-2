
@{
    ViewData["Title"] = "Index";
}

@model List<Order>
@{
    ViewData["Title"] = "Index";
  
}

<div class="container ">
    <dv class="row">
        <div class="col-lg-12">
            <h1 style="float:left">Authors</h1>
            <a style="display:flex;margin-left:80%;width:80px" asp-action="create" asp-controller="author" class="btn btn-primary">Create</a>
        </div>
    </dv>
    <row mx-auto>
        <div class="col-lg-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full-Name</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Order item in Model)
                    {
                    
                    <tr>
                       
                        <td>@item.FullName</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.Phone</td>
                        <td>@item.Zipcode</td>
                        <td>
                            <a class="btn btn-secondary" asp-action="deatil" asp-controller="order" asp-route-id="@item.Id">Detail</a>
                            <a class="btn btn-danger delete-btn2" data-id="@item.Id" data-name="order" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-success" asp-action="update" asp-controller="order" asp-route-id="@item.Id">Update</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
           
        </div>
    </row>
</div>




