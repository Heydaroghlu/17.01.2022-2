
@{
    ViewData["Title"] = "Comment";
}

@model List<BookComment>

<div class="container ">
    <dv class="row">
        <div class="col-lg-12">
            <h1 style="float:left">Comments</h1>
        </div>
    </dv>
    <row mx-auto>
        <div class="col-lg-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Comment</th>
                        <th>BookName</th>
                        <th>AuthorName</th>
                        <th>Rate</th>
                        <th>Status</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (BookComment item in Model)
                    {

                        <tr>

                            <td>@item.FullName</td>
                            <td>@item.Text</td>
                            <td>@item.Book.Name</td>
                            <td>@item.Book.Author.FullName</td>
                            <td>@item.Rate</td>
                            <td><span class="badge bg-@(item.Status?"success":"danger")">@(item.Status?"Tesdiqlenib":"Tesdiqlenmeyib")</span></td>

                            <td>
                                <a class="btn btn-danger delete-btn2" data-id="@item.Id" data-name="comment" asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-success" asp-action="commentupdate" asp-controller="comment" asp-route-id="@item.Id">Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </row>
</div>




