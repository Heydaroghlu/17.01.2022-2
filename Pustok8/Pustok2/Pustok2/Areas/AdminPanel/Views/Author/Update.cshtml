@model Author
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Update Author</h1>
    <div class="row">
        <div class="col-lg-10">
            <form method="post" asp-action="update" asp-controller="author">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Author Name</label>
                    <input class="form-control" asp-for="FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update  Author</button>
            </form>
        </div>
    </div>
</div>

