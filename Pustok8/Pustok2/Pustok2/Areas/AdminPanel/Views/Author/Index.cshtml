@model List<Author>
@{
    ViewData["Title"] = "Index";
    int count = (ViewBag.SelectPage - 1) * 8;
    int pagecount = ViewBag.PageCount;
}

<div class="container ">
    <dv class="row">
        <div class="col-lg-12">
            <h1 style="float:left">Authors</h1>
            <a style="display:flex;margin-left:80%;width:80px" asp-action="create" asp-controller="author" class="btn btn-primary">Create</a>
        </div>
    </dv>
    <row mx-auto>
        <div class="col-lg-12">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Author-Name</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Author item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td data-name="@item.FullName">@item.FullName</td>
                            <td>@item.Books.Count</td>

                            <td>
                                <a class="btn btn-danger delete-btn2"  data-id="@item.Id" data-name="author"  asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-success" asp-action="update" asp-controller="author" asp-route-id="@item.Id">Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination" style="display:flex;justify-content:center;">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= pagecount; i++)
                    {
                        <li class="page-item"><a class="page-link" asp-action="index" asp-controller="author" asp-route-page="@i">@i</a></li>

                    }
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </row>
</div>


