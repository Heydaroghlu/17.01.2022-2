@model List<Book>

<div class="product-slider multiple-row  slider-border-multiple-row  sb-slick-slider"
     data-slick-setting='{
                            "autoplay": true,
                            "autoplaySpeed": 8000,
                            "slidesToShow": 5,
                            "rows":1,
                            "dots":true
                        }' data-slick-responsive='[
                            {"breakpoint":1200, "settings": {"slidesToShow": 3} },
                            {"breakpoint":768, "settings": {"slidesToShow": 2} },
                            {"breakpoint":480, "settings": {"slidesToShow": 1} },
                            {"breakpoint":320, "settings": {"slidesToShow": 1} }
                        ]'>
    @foreach (Book item in Model)
    {
        <div class="single-slide">
            <div class="product-card">
                <div class="product-header">
                    <a asp-controller="home" asp-action="detail" asp-route-id="@item.Id" class="author">
                        @item.Author.FullName
                    </a>
                    <h3>
                        <a asp-controller="home" asp-action="detail" asp-route-id="@item.Id">
                            @item.Name
                        </a>
                    </h3>
                </div>
                <div class="product-card--body">
                    <div class="card-image">
                        <img src="~/image/products/@item.BookImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
                        <div class="hover-contents">
                            <a asp-controller="home" asp-action="detail" asp-route-id="@item.Id" class="hover-image">
                                <img src="~/image/products/@item.BookImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
                            </a>
                            <div class="hover-btns">
                                <a asp-action="AddBasket" asp-controller="book" asp-route-id="@item.Id" class="single-btn">
                                    <i class="fas fa-shopping-basket"></i>
                                </a>
                                <a href="wishlist.html" class="single-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="compare.html" class="single-btn">
                                    <i class="fas fa-random"></i>
                                </a>
                                <a href="#" data-toggle="modal" data-id="@item.Id"
                                   class="single-btn single-btn-eye">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="price-block">
                        @if (item.DiscountPercent != 0)
                        {
                            <span class="price">£@((item.SalePrice*(100-item.DiscountPercent)/100).ToString("#.00"))</span>
                            <del class="price-old">£@item.SalePrice</del>
                            <span class="price-discount">@item.DiscountPercent%</span>
                        }
                        else
                        {
                            <span class="price">£@item.SalePrice</span>

                        }
                    </div>
                </div>
            </div>
        </div>
    }

</div>