
@{
    ViewData["Title"] = "Forgot";
}


@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Login";
}



<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="forgot" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login Customer</h4>
                        <p><span class="font-weight-bold">Forgot password</span></p>
                        <div class="row">
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Email">Email</label>
                                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter your password">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Send email</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}