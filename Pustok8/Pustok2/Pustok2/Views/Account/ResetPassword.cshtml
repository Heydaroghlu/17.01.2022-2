

@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Login";
}



<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="changepassword" method="post">
                    <div class="login-form">
                        <h4 class="login-title">Reset Password</h4>
                        <p><span class="font-weight-bold">Reset Password</span></p>
                        <div class="row">

                            <input name="token" type="hidden" value="@Model.Token" />
                            <input name="email" type="hidden" value="@Model.Email" />

                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Enter your password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Change Password</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

